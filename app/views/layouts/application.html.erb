<!DOCTYPE html>
<html>
  <head>
    <title>QuizShow</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1><%= link_to 'Quiz', root_path %></h1>
      <nav>
        <% if @current_user == nil %>
          <p><%= link_to 'Login', login_path %></p>
          <p><%= link_to 'Sign Up', signup_path %></p>
        <% else %>
          <% if @current_user.admin == true %>
            <p><%= link_to 'Admin', rails_admin_path %></p>
            <p><%= link_to 'Create Quiz', new_quiz_path %></p>
          <% end %>
            <p><%= link_to 'Sign Out', logout_path, method: :delete %></p>
        <% end %>
      </nav>
    </header>
    <div class="container">

      <%= yield %>
    </div>
  </body>
</html>
