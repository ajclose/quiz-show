<div class="quizzes">
  <div class="published">
    <% if @published_quizzes.length == 0 %>
      <h4>There are no new quizzes to take.  Check back soon!</h3>
    <% else %>
      <% @published_quizzes.each do |quiz| %>
        <h3><%= link_to quiz.title, quiz_path(quiz) %></h3>
        <h4><%= quiz.description %></h4>
        <h5><%= quiz.questions.length %> Questions</h5>
      <% end %>
    <% end %>
  </div>
  <% if @current_user.admin == true %>
  <div class="unpublished">
    <h2>Unpublished Quizzes</h2>
    <% @unpublished_quizzes.each do |quiz| %>
    <h3><%= quiz.title %></h3>
    <h4><%= quiz.description %></h4>
    <h5><%= quiz.questions.length %> Questions</h5>
    <%= link_to 'Edit', edit_quiz_path(quiz) %>
    <%= link_to 'Delete', quiz_path(quiz), method: :delete, data: {confirm: "Are you sure you want to delete this quiz?"} %>
    <% end %>
  </div>
  <% end %>
</div>



<aside class="well">
  <h3>Completed Quizzes</h3>
  <h4>Total Score: <%= @total_score %></h4>
  <% @completed_quizzes.each do |quiz| %>
  <div class="">
    <%= quiz.quiz.title %>
    <%= quiz.score %>/<%= quiz.quiz.questions.length %>
  </div>
    <% end %>
</aside>
