<h3>Edit Quiz</h3>

<%= render partial: 'form' %>

<%= link_to 'Add Question', new_quiz_question_path(@quiz) %>
<% @quiz.questions.each do |question| %>

<p><%= question.body %></p>
<%= link_to 'Edit', edit_quiz_question_path(@quiz, question) %>
<%= link_to 'Delete', quiz_question_path(@quiz, question), method: :delete, data: {confirm: "Are you sure you want to delete this question?"} %>
<% end %>
